<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--Estructura de como se mostrara la info en el recycler view-->

    <TextView
        android:id="@+id/tvNumAntecedente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Numero Antecedente"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="2dp" />

    <TextView
        android:id="@+id/tvEstado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Estado"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvEstadoAnimo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Estado Animo"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvIngestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingestion"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvNarizSeca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nariz Seca"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvNumPaciente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Numero Paciente"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha"
        android:textColor="@color/black"
        android:textSize="20sp" />

</LinearLayout>